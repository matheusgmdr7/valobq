/* Web Font Loader - POLARIUM BROKER */
(function() {
  // Simulate font loading for POLARIUM
  const fonts = [
    'Roboto-Light',
    'Roboto-Bold', 
    'Roboto-Regular'
  ];
  
  fonts.forEach(font => {
    const link = document.createElement('link');
    link.href = `https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap`;
    link.rel = 'stylesheet';
    document.head.appendChild(link);
  });
  
  // Add font classes
  document.documentElement.classList.add('wf-platformdefault-n4-active');
  document.documentElement.classList.add('wf-robotobold-n4-active');
  document.documentElement.classList.add('wf-robotothin-n4-active');
  document.documentElement.classList.add('wf-active');
})();
