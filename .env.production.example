# ============================================
# VARIÁVEIS DE AMBIENTE - PRODUÇÃO
# ============================================
# Copie este arquivo para .env.production no servidor
# cp .env.production.example .env.production

# ============================================
# SUPABASE (Banco de dados e Auth)
# ============================================
NEXT_PUBLIC_SUPABASE_URL=https://seu-projeto.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=sua-anon-key-aqui

# ============================================
# MARKET DATA SERVER
# ============================================
MARKET_DATA_PORT=8080
REDIS_URL=redis://redis:6379

# URL pública do WebSocket (como o frontend vai conectar)
# Em produção com Nginx + SSL: wss://seu-dominio.com/ws
# Sem proxy: ws://seu-ip:8080
NEXT_PUBLIC_MARKET_DATA_WS_URL=wss://seu-dominio.com/ws

# ============================================
# APIS DE DADOS DE MERCADO
# ============================================
POLYGON_API_KEY=sua-polygon-api-key
TWELVEDATA_API_KEY=sua-twelvedata-api-key

# ============================================
# NEXT.JS
# ============================================
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1
